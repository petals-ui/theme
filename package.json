{
  "name": "@petals/template",
  "version": "0.0.0",
  "description": "Scaffold template for petals (components)",
  "private": true,
  "main": "style.scss",
  "sass": "style.scss",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "gulp",
    "precopy": "rm -rf dist/package*.json dist/*.md",
    "copy": "cp package*.json *.md dist",
    "prerelease": "npm run build && npm run copy",
    "release": "cd dist && npm publish --access=public",
    "bump:major": "npm version major && npm run release",
    "bump:minor": "npm version minor && npm run release",
    "bump:patch": "npm version patch && npm run release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petals-ui/template.git"
  },
  "author": "Ourai Lin <ourairyu@gmail.com> (https://ourai.ws/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/petals-ui/template/issues"
  },
  "homepage": "https://github.com/petals-ui/template",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-cssmin": "^0.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.1",
    "gulp-shopify-sass": "^0.3.3",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-strip-css-comments": "^2.0.0",
    "prettier": "^2.1.2"
  }
}
